<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/join_bg"

    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/backbtn"
        android:layout_width="100px"
        android:layout_height="100px"
        android:src="@drawable/back"
        android:padding="0dp"
        android:background="#00ff0000"
        android:layout_marginTop="30px"
        android:layout_marginLeft="30px"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10px"
            android:paddingTop="350px"
            android:src="@drawable/name" />

        <EditText
            android:id="@+id/nickname"
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:hint=" 이름를 입력하세요"
            android:paddingTop="390px">

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10px"
            android:paddingTop="40px"
            android:src="@drawable/join_id" />

        <EditText
            android:id="@+id/id"
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:hint=" 아이디를 입력하세요"
            android:paddingTop="80px">

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10px"
            android:paddingTop="40px"
            android:src="@drawable/join_pw" />

        <EditText
            android:id="@+id/pwd"
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:hint=" 비밀번호를 입력하세요"
            android:paddingTop="80px">

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0px"
            android:layout_marginLeft="-10px"
            android:paddingTop="40px"
            android:src="@drawable/cpw" />

        <EditText
            android:id="@+id/pwd2"
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:hint=" 비밀번호를 다시 입력하세요"
            android:paddingTop="80px">

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0px"
            android:layout_marginLeft="-10px"
            android:paddingTop="40px"
            android:src="@drawable/age" />

        <Spinner
            android:id="@+id/age_spinner"
            android:layout_width="570px"
            android:layout_height="wrap_content"
            android:entries="@array/age"/>
    </LinearLayout>



    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_btn"
        android:padding="0dp"
        android:layout_marginTop="40px"
        android:background="#00ff0000"
        android:src="@drawable/btn_join"
        ></ImageButton>




</LinearLayout>