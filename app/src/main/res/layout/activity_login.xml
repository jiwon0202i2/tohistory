<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lbg"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10px"
            android:paddingTop="550px"
            android:src="@drawable/id_img" />

        <EditText
            android:id="@+id/id"
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:hint=" id를 입력하세요"
            android:paddingTop="590px">

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10px"
            android:paddingTop="70px"
            android:src="@drawable/pw_img" />

        <EditText
            android:id="@+id/pwd"
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:hint=" pw를 입력하세요"
            android:paddingTop="110px">

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250px"
            android:layout_marginTop="60px"
            android:text="아이디저장"
            android:id="@+id/check1"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:layout_marginTop="60px"
            android:text="자동로그인"
            android:id="@+id/check2"/>

    </LinearLayout>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_btn"
        android:padding="0dp"
        android:layout_marginTop="80px"
        android:background="#00ff0000"
        android:src="@drawable/btn_login"
        ></ImageButton>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/jointext"
        android:padding="0dp"
        android:layout_marginTop="60px"
        android:background="#00ff0000"
        android:src="@drawable/gojoin"
        ></ImageButton>




</LinearLayout>